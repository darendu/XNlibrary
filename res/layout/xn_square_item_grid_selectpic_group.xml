<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/xn_white" >

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/squ_friends_sends_pictures_no" >
    </ImageView>

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxWidth="150dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/group_image"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="Camera1111"
        android:textColor="@color/xn_black"
        android:textSize="16sp" />

    <TextView
        android:layout_marginLeft="3dp"
        android:id="@+id/k01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/group_title"
        android:layout_alignBottom="@+id/group_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/group_title"
        android:textColor="@color/xn_black"
        android:ellipsize="end"
        android:gravity="center"
        android:text="(" />

    <TextView
        android:id="@+id/group_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/group_title"
        android:layout_alignBottom="@+id/group_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/k01"
        android:textColor="@color/xn_black"
        android:ellipsize="end"
        android:gravity="center"
        android:text="5" />

    <TextView
        android:id="@+id/k02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/group_title"
        android:layout_alignBottom="@+id/group_title"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/group_count"
        android:textColor="@color/xn_black"
        android:ellipsize="end"
        android:gravity="center"
        android:text=")" />

    <ImageView
        android:id="@+id/togo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/k02"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/item_signature_iv_menu_defaul" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/group_image"
        android:background="#ccccff" />

</RelativeLayout>