<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mlist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_back" >

    <RelativeLayout
        android:id="@+id/sdk_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/xn_bg_color"
         >

        <TextView
            android:id="@+id/tv_csgrouplist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/xn_recent_person"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/xn_black" />

        <ImageView
            android:id="@+id/sdt_list_back"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/sdk_finish2" />
    </RelativeLayout>


    <com.xiaoneng.view.XNListView
        android:id="@+id/sdk_service_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdk_top"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="@drawable/list_selector"
        android:transcriptMode="alwaysScroll" />

</RelativeLayout>